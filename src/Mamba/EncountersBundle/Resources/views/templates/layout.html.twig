<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>{% block title %}Welcome!{% endblock %}</title>
{% block stylesheets %}{% endblock %}
{% stylesheets '@EncountersBundle/Resources/public/css/*' filter="?yui_css" %}
<link rel="stylesheet" href="{{ asset_url }}" />
{% endstylesheets %}
{% stylesheets '@EncountersBundle/Resources/public/css/ie/*' filter="?yui_css" %}
<!--[if lt IE 9 ]><link rel="stylesheet" href="{{ asset_url }}" type="text/css"  /><![endif]-->
{% endstylesheets %}
</head>
<body>
<div class="app-layout">
    <div class="app-menu-bar">
        <i class="l-menu-rounder"></i>
        <i class="l-rounder"></i>
        <i class="r-rounder"></i>
        <div class="app-menu-bar-inner">
            <ul class="info-meet" style="float:right;">
                <li class="item-popul"><div class="{{ webuser.popularity.class }}"><b>{{ webuser.popularity.title }}</b> популярность</div></li>
                <li class="item-setting"><a href="/preferences"></a></li>
                <li class="item-energy"><b class="battery"><b style="width:{{ webuser.battery.charge*15 }}%"></b></b> <i>{{ webuser.battery.charge*20 }}%</i></li>
            </ul>
            <ul class="info-meet">
                <li class="item-game active"><a href="/search"><b>Поиск</b></a></li>
                <li class="item-mychoice"><a href="/mychoice"><b>Я выбрал</b>  <i>{% if webuser.stats.mychoice %}{{ webuser.stats.mychoice }}{% endif %}</i></a></li>
                <li class="item-visitors"><a href="/visitors"><b>Меня смотрели</b> <i>{% if webuser.stats.visitors %}{{ webuser.stats.visitors }}{% endif %}</i></a></li>
                <li class="item-mutual"><a href="/mutual"><b>Взаимные</b>{% if webuser.stats.mutual %} <i class="heart">{{ webuser.stats.mutual }}</i>{% endif %}</a></li>
            </ul>
        </div>
    </div>
</div>
{% block body %}{% endblock %}
{% block javascripts %}{% endblock %}
{% javascripts
    '@EncountersBundle/Resources/public/js/core/*'
    '@EncountersBundle/Resources/public/js/tools/*'
    '@EncountersBundle/Resources/public/js/pages/*'
    '@EncountersBundle/Resources/public/js/elements/*'
    filter="?yui_js"
%}
<script src="{{ asset_url }}"></script>
{% endjavascripts %}
<script src="http://js.aplatform.ru/app.js"></script>
<script>
$Config.set('debug', {{ app.debug }});
{% autoescape false %}
{% if settings.platform %}
$Config.set('platform', {{settings.platform}});
{% endif %}
{% if settings.search %}
$Config.set('search', {{settings.search}});
{% endif %}
{% endautoescape %}
$(document).ready(function(){
    $App.init(location.pathname).run();
    $Layers.showLayerAnswerMaybe();
});
</script>
</body>
</html>